<div class="w-50">
  <%= form_with(model: artist) do |form| %>
    <% if artist.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

        <ul>
          <% artist.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="d-flex flex-row justify-content-between mb-3">
      <div class="flex-grow-1 pe-2">
        <%= form.label :first_name, style: "display: block" %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>

      <div class="flex-grow-1 ps-2">
        <%= form.label :last_name, style: "display: block" %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :bio, style: "display: block" %>
      <%= form.text_area :bio, class: "form-control" %>
    </div>

    <div class="mb-3 d-flex justify-content-between">
      <%= button_tag "Cancel", onclick: "window.history.back()", class: "btn btn-secondary" %>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>